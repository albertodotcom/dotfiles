### aliases ###

# back one folder
alias b="cd .."

# create a folder and cd into it
mkcd () {
  mkdir $1
  cd $1
}

# what is running on TCP ports
alias lstcp="sudo lsof -i -n -P | grep TCP"

# fetch a specific PR from origin
function git_pr() {
  git fetch origin pull/"$@"/head:pr_"$@" ;
  git checkout pr_"$@" ;
}
