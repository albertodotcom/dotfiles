[core]
	excludesfile = ~/.gitignore
	editor = vim
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[push]
	default = simple
[alias]
	st = status
	df = diff
	ds = diff --stat -r
	ci = commit
	co = checkout
	br = branch
	ll = pull
	sh = push
[filter "hawser"]
	clean = git hawser clean %f
	smudge = git hawser smudge %f
	required = true
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true